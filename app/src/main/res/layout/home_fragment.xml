<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home_container"
    >

    <Button
        android:id="@+id/load_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="163dp"
        android:onClick="onLoadGame"
        android:text="@string/load_game" />

    <Button
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/load_game"
        android:layout_alignLeft="@+id/load_game"
        android:layout_alignStart="@+id/load_game"
        android:layout_marginBottom="101dp"
        android:onClick="onNewGame"
        android:text="@string/new_game" />


</RelativeLayout>